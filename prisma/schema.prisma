// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id String @id @default(cuid())
  name String
  cultivarName  String
  height String
  spread String
  numberPerSqMeter String 
  architecture String
  flowerSeason String
  structuralInterest String
  longevity String
  spreadAbility String
  persistence String
  selfSeeding String
  habitatLight String
  habitatSoil String
  zone String
  notes String
}